<%= form_for(@observation.plan, url: wizard_path, method: :put) do |f| %>
  <% if @observation.plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@observation.plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @observation.plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header d-flex align-items-center">
          <h3 class="h4"><%= render "form_header" %></h3>
        </div>
        <div class="card-body">
          <table>
            <colgroup>
              <col span="1" style="width: 60%;">
              <col span="1" style="width: 5%;">
              <col span="1" style="width: 35%;">
            </colgroup>
            <thead>
              <tr>
                <th>Question</th>
                <th></th>
                <th>Response</th>
              </tr>
            </thead>
            <tbody>
              <div class="field">
                <div class="form-group-material">
                  <!-- Question A -->
                  <tr>
                    <td>
                      Plan includes unpacking standards and objectives that match the learning targets
                    </td>
                    <td></td>
                    <td>
                      <%= f.select :questiona, Observations::Plan.questionas.keys.map{ |w| [w.humanize, w] }, class:'form-control' %>
                    </td>
                  </tr>
                  <!-- Question B -->
                  <tr>
                    <td>
                      Plan provides meaningful ways that students can integrate technology or manipulative into their learning and activities 
                    </td>
                    <td></td>
                    <td>
                      <%= f.select :questionb, Observations::Plan.questionbs.keys.map{ |w| [w.humanize, w] }, class:'form-control' %>
                    </td>
                  </tr>
                  <!-- Question C -->
                  <tr>
                    <td>
                      Plan includes strategies and activities that meet students learning needs
                    </td>
                    <td></td>
                    <td>
                      <%= f.select :questionc, Observations::Plan.questioncs.keys.map{ |w| [w.humanize, w] }, class:'form-control' %>
                    </td>
                  </tr>
                  <!-- Question D -->
                  <tr>
                    <td>
                      Plan includes assessment tools and methods
                    </td>
                    <td></td>
                    <td>
                      <%= f.select :questiond, Observations::Plan.questionds.keys.map{ |w| [w.humanize, w] }, class:'form-control' %>
                    </td>
                  </tr>
                </div>
              </div>
              
            </tbody>
          </table>
          
          
          <div class="actions">
            <div class="modal-footer">
              <%= render "submit_buttons", f: f %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
