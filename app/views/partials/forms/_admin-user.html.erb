<%= form_for @user, :url => admin_edit_user_path(@user.username) do |f| %>

  <div class="row">
    <label class="col-sm-3 form-control-label">Update Password</label>
    <div class="col-sm-9">

      <div class="field">
        <div class="form-group">
          <%= f.text_field :first_name, id:"register-first-name", class: "input-material" %>
          <label for="register-first-name" class="label-material">First Name</label>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary" %>
        <%= link_to "Back", :back, class:"btn btn-delete" %>
      </div>
    </div>
  </div>
<% end %>
