<div class="col-lg-12">
  <div class="card">
    <div class="card-body">
      <h2>
        Hello <%= @user.first_name %>,
        <br>
        <small>
          here you can change your password<br>
          <small>If you need anything else edited, please contact your administrator.</small>
        </small>
      </h2>
    </div>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <label class="col-sm-3 form-control-label">Update Password</label>
    <div class="col-sm-9">

      <div class="field">
        <div class="form-group-material">
          <%= f.password_field :password, autocomplete: "off", id:'new-password', class:"input-material" %>
          <% if @minimum_password_length %>
            <br />
            <small><%= @minimum_password_length %> characters minimum</small>
        <% end %>
          <label for="new-password" class="label-material">New Password</label>
        </div>
      </div>

      <div class="field">
        <div class="form-group-material">
          <%= f.password_field :password_confirmation, autocomplete: "off", id:'new-password-confirm', class:"input-material" %>
          <label for="new-password-confirm" class="label-material">Confirm New Password</label>
        </div>
      </div>

      <div class="field">
        <div class="form-group-material">
          <%= f.password_field :current_password, autocomplete: "off", id:'current-password', class:"input-material" %>
          <label for="current-password" class="label-material">Current Password</label>
          <small>(we need your current password to confirm your changes)</small>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary" %>
        <%= link_to "Back", :back, class:"btn btn-delete" %>
      </div>
    </div>
  </div>
<% end %>