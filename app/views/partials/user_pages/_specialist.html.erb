<section class="tables no-padding-top">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4"><%= @user.name %>'s Observations</h3>
          </div>
          <div class="card-body">
            <section class="dashboard-counts no-padding">
              <div class="container-fluid">
                <div class="item d-flex align-items-center">
                  <div class="icon bg-sea"><i class="fa fa-hashtag"></i></div>
                  <div class="title">
                    <span>Observation Count</span>
                    <div class="number"><strong><%= @observations.count %></strong></div>
                  </div>
                </div>
              </div>
            </section>
          <% if @observations.empty? %>
            <div class="card-body">
              <%= render partial: "partials/texts/no-search", locals: {missing: "Observations"} %>
            </div>
          <% else %>
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Teacher</th>
                    <th>School</th>
                    <th>Grade</th>
                    <th>Content Area</th>
                  </tr>
                </thead>
                <tbody>
                  <% @observations.each do |o| %>
                    <tr class='clickable-row' data-href='/observations/<%= o.id %>'>
                      <td><%= o.observation_date.strftime("%B %d, %Y") %></td>
                      <td><%= o.teacher.list_name %></td>
                      <td><%= o.classroom.school.name %></td>
                      <td><%= o.classroom.grade %></td>
                      <td><%= o.classroom.content_area %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
