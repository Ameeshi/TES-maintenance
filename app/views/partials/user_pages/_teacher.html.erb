  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4">Teachers</h3>
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Grade</th>
                  <th>Content Area(s)</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <td>
                    <a href="#">View All</a>
                  </td>
                </tr>
              </tfoot>
              <tbody>
                <% @user.classrooms.each do |classroom| %>
                  <tr class='clickable-row'>
                    <th scope="row">1</th>
                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
