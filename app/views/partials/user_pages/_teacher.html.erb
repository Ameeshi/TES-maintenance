<%= render 'partials/charts/teacher-show'%>

<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4">Classes</h3>
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Grade</th>
                  <th>Content Area</th>
                  <th>School</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <td>
                    <a href="#">View All</a>
                  </td>
                </tr>
              </tfoot>
              <tbody>
                <% @user.classrooms.each do |classroom| %>
                  <tr class='clickable-row' data-href='/classrooms/<%= classroom.id %>'>
                    <th scope="row">1</th>
                    <td><%= classroom.grade %></td>
                    <td><%= classroom.content_area %></td>
                    <td><%= classroom.school.name %></td>
                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section></section>