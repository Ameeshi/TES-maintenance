

<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom"><%= @school.name %> <%= link_to 'Edit', edit_school_path(@school), class: 'btn btn-primary' %></h2>
    <% if current_user.has_role? :admin %>
      <h2><%= link_to 'Edit', edit_school_path(@school), class: 'btn btn-primary' %></h2>
    <% end %>
  </div>
</header>
<!-- Dashboard Counts Section-->
<section class="dashboard-counts no-padding-bottom">
  <div class="container-fluid">
    <div class="row bg-white has-shadow">
      <!-- Item -->
      <div class="col-xl-6 col-sm-6">
        <!-- Change this to teachers from that school -->
        <a href="schools.html">
          <div class="item d-flex align-items-center">
            <div class="icon bg-blue"><i class="icon-user"></i></div>
            <div class="title">
              <span>Total<br>Teachers</span>
              <div class="number"><strong><%= @school.teachers.count %></strong></div>
            </div>
          </div>
        </a>
      </div>
      <!-- Item -->
      <div class="col-xl-6 col-sm-6">
        <!-- Change this to observations from that school -->
        <a href="schools.html">
          <div class="item d-flex align-items-center">
            <div class="icon bg-green"><i class="icon-bill"></i></div>
            <div class="title">
              <span>Total<br>Observations</span>
              <div class="number"><strong><%= @school.observations.count %></strong></div>
            </div>
          </div>
        </a>
      </div>
      <!-- Item -->
    </div>
  </div>
</section>
<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4"><%= @school.name %> Teachers</h3>
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Grade</th>
                  <th>Content Area(s)</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <td>
                    <a href="#">View All</a>
                  </td>
                </tr>
              </tfoot>
              <tbody>
                <% @school.teachers.each do |teacher| %>
                  <tr class='clickable-row' data-href='/users/<%= teacher.username %>'>
                    <th scope="row">1</th>
                    <td><%= teacher.name %></td>
                    <td><%= teacher.highestRole %></td>
                    <td><%= teacher.username %></td>
                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section></section>