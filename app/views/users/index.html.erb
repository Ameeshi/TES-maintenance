<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Users</h2>
  </div>
</header>
<!-- Teacher List -->
<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <% if @users.empty? %>
            <div class="card-body">
              <%= render partial: "partials/texts/empty", locals: {missing: "Users"} %>
            </div>
          <% else %>
            <div class="card-header d-flex align-items-center">
              <h3 class="h4">All Users</h3>
            </div>
            <div class="card-body">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Username</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <a href="#">View All</a>
                  </tr>
                </tfoot>
                <tbody>
                  <% @users.each do |user| %>
                    <tr class='clickable-row' data-href='/users/<%= user.username %>'>
                      <th scope="row">1</th>
                      <td><%= user.name %></td>
                      <td><%= user.highestRole %></td>
                      <td><%= user.username %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>