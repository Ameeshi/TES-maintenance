<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Users</h2>
  </div>
</header>
<%= render "partials/alerts" %>
<% if current_user.has_role?(:admin) %>
  <div class="modal-footer">
    <%= link_to 'Inactive', inactive_path, class: 'btn btn-primary' %>
  </div>
<% end %>
<!-- Teacher List -->
<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <!--  Gross syntax here. Makes it look like not enough closing brackets -->
      <% if current_user.has_role?(:admin) %>
        <div class="col-lg-8">
      <% else %>
        <div class="col-lg-12">
      <% end %>
        <div class="card">
          <% if @users.empty? %>
            <div class="card-body">
              <%= render partial: "partials/texts/no-search", locals: {missing: "Users"} %>
            </div>
          <% else %>
            <div class="card-header d-flex align-items-center">
              <h3 class="h4">All Users</h3>
            </div>
            <div class="card-body">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Username</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <td colspan="100%">
                      <div class="apple_pagination">
                        <%= will_paginate @users, :container => false %>
                      </div>
                    </td>
                  </tr>
                </tfoot>
                <tbody>
                  <% @users.each do |user| %>
                    <tr class='clickable-row' data-href='/users/<%= user.username %>'>
                      <td><%= user.list_name %></td>
                      <td><%= user.highestRole %></td>
                      <td><%= user.username %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
      <% if current_user.has_role?(:admin) %>
        <%= render partial: 'partials/searchbar', locals: {path: users_path} %>
      <% end %>
    </div>
  </div>
</section>