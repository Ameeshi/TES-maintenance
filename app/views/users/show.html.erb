<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom"><%= @user.name %></h2>
  </div>
</header>
<%= render "partials/alerts" %>
<!-- Client Section-->
<section class="client">
  <div class="container-fluid">
    <div class="row">
      <!-- Client Profile -->
      <div class="col-lg-12">
        <div class="client card">
          <div class="card-body text-center">
            <div class="client-avatar">
              <%= image_tag("default_user.png", :alt => "user", class: "img-fluid rounded-circle") %>
              <% if @user == current_user %>
                <div class="status bg-green"></div>
              <% end %>
            </div>
            <div class="client-title">
              <h3><%= @user.name %></h3>
              <span>
                <% @user.roles.each do |role| %>
                  <span class="capitalize"><%= role.name %></span>
                <% end %>
              </span>
              <span><%= @user.username %></span>
              <span><%= @user.email %></span>
            </div>
            <div class="client-info">
              <div class="row">
                <% if @user == current_user %>
                  <div class="col-md-4"></div>
                  <div class="col-md-4">
                    <%= link_to edit_user_registration_path, class:"btn btn-primary" do %>
                      <i class="fa fa-wrench fa-fw"></i> Edit Your Account
                    <% end %>
                  </div>
                <% elsif current_user.has_role? :admin %>
                  <div class="col-md-4">
                    <%= render partial: "partials/forms/modal-form", locals: {title: "Edit #{@user.first_name}'s Account", form: "admin-user"} %>
                  </div>
                  <div class="col-md-4 offset-md-4">
                    <div>
                      <%= link_to edit_user_registration_path, class:"btn btn-delete" do %>
                        <i class="fa fa-trash fa-fw"></i> Deactivate Account
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "partials/user_pages/#{@user.highestRole}" %>