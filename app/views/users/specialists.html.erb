<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Specialists</h2>
  </div>
</header>
<!-- Specialist List -->
<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4">All Specialists</h3>
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Grade</th>
                  <th>Content Area(s)</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <a href="#">View All</a>
                </tr>
              </tfoot>
              <tbody>
                <% @specialists.each do |specialist| %>
                  <tr class='clickable-row' data-href='teacher.html'>
                    <th scope="row">1</th>
                    <td>Mark Otto</td>
                    <td>3rd</td>
                    <td>Math, Science</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>