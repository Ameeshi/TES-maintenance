<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Specialists</h2>
  </div>
</header>
<%= render "partials/alerts" %>
<!-- Specialist List -->
<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <% if @specialists.empty? %>
            <div class="card-body">
              <%= render partial: "partials/texts/empty", locals: {missing: "Specialists"} %>
            </div>
          <% else %>
            <div class="card-header d-flex align-items-center">
              <h3 class="h4">All Specialists</h3>
            </div>
            <div class="card-body">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Grade</th>
                    <th>Content Area(s)</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <td>
                      <a href="#">View All</a>
                    </td>
                  </tr>
                </tfoot>
                <tbody>
                  <% @specialists.each do |specialist| %>
                    <tr class='clickable-row' data-href='/users/<%= specialist.username %>'>
                      <td><%= specialist.list_name %></td>
                      <td><%= specialist.highestRole %></td>
                      <td><%= specialist.username %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>